<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_item_size"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/view_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_margin_start"
        android:layout_marginEnd="@dimen/dp_margin_End"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/dp_icon_size"
            android:layout_height="@dimen/dp_icon_size"
            android:layout_marginEnd="@dimen/dp_margin_End"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@color/colorLineColor" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextContent"
            android:textSize="@dimen/sp_content_size"
            tools:text="android" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_margin_start"
        android:layout_marginEnd="@dimen/dp_margin_End"
        android:layout_toEndOf="@+id/view_left"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextHelp"
            android:textSize="@dimen/sp_message_size"
            tools:text="android" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/dp_icon_size"
            android:layout_height="@dimen/dp_icon_size"
            android:layout_marginStart="@dimen/dp_margin_start"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/common_ic_right_gray_72" />

    </LinearLayout>

    <View
        android:id="@+id/separate_match"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLineColor" />

    <View
        android:id="@+id/separate_wrap"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_margin_start"
        android:layout_marginEnd="@dimen/dp_margin_End"
        android:background="@color/colorLineColor" />

</RelativeLayout>